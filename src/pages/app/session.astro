// }
newLiftRow.exercise = exercise
newLiftRow.lifts = [...lifts]
newLiftRow.comments = comments

  liftRows.push(newLiftRow)
}
console.log('Lift Rows: ',liftRows)
console.log('liftRows[0]lifts [0]JFC: ',liftRows[0].lifts[0])

