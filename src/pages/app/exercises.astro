---
import Layout from '@layouts/app.astro';
import { fetchUsers, fetchExercises } from '@/src/data';

const exercises = await fetchExercises();

---

<Layout title="Exercises">
  {exercises.length === 0 && <p>No exercises found</p>}

  {
    exercises.length > 0 &&
      exercises.map((exer) => (
        <div class="flex flex-row text-xs">
          <div class="p-0 basis-1/5">{exer.exer_musclegroup} </div>
          <div class="p-0 basis-3/5 ">{exer.exer_name}</div>
          <div class="p-0">{exer.exer_page}</div>
          <div class="p-2">
            <a
              // href=`/app/${exer.exer_page}`
              href="/app/viewExercise"
              
              class="bg-gray-500 text-white text-xs px-1 py-0 font-mono rounded-sm cursor-pointer"
            >
              View
            </a>
          </div>
        </div>
      ))
  }

</Layout>
